{% extends 'base.html.twig' %}

{% block title %}Liste des séminaires{% endblock %}

{% block body %}
<h1>Liste des séminaires</h1>

<a href="{{ path('app_seminar_create') }}" class="btn btn-primary mb-3">Créer un séminaire</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for seminar in seminaires %}
            <tr>
                <td>{{ seminar.title }}</td>
                <td>{{ seminar.description }}</td>
                <td>{{ seminar.date ? seminar.date|date('d/m/Y H:i') : '' }}</td>
                <td>
                    <a href="{{ path('app_seminar_edit', {'id': seminar.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <form method="post" action="{{ path('app_seminar_delete', {'id': seminar.id}) }}" style="display:inline-block" onsubmit="return confirm('Voulez-vous vraiment supprimer ce séminaire ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ seminar.id) }}">
                        <button class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun séminaire trouvé.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
