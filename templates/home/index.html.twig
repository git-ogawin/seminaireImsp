{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container my-5">

    <!-- 🎓 Bienvenue -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold mb-4 text-primary">Bienvenue sur la plateforme des séminaires de l'IMSP 🎓</h1>
            <p class="lead text-muted">
                Retrouvez tous les séminaires à venir, explorez les archives, téléchargez les supports
                et recevez des notifications directement par email.
            </p>
            {% if app.user %}
                <div class="alert alert-success mt-4">
                    👋 Bonjour <strong>{{ app.user.email }}</strong> — 
                    <a href="{{ path('app_logout') }}" class="text-danger text-decoration-none ms-2">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="col-md-6 text-center">
            <img src="{{ asset('images/seminaire.jpg') }}" alt="Séminaires" class="img-fluid" style="height: 240px;">
        </div>
    </div>

    <hr class="my-5">

    <!-- 📬 Abonnement aux notifications -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-sm border-0 p-4">
                <h4 class="mb-3 text-primary">📬 Restez informé</h4>
                <p class="text-muted">Recevez les dernières annonces directement dans votre boîte mail.</p>
                {{ form_start(formEmail) }}
                    <div class="input-group">
                        {{ form_widget(formEmail.email, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Votre adresse email'
                            }
                        }) }}
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-envelope-plus-fill me-1"></i> S'abonner
                        </button>
                    </div>
                {{ form_end(formEmail) }}
            </div>
        </div>
    </div>

    <!-- 📅 Séminaires à venir -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">📅 Prochains Séminaires</h2>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 col-md-10">
            {% if seminaires is empty %}
                <div class="alert alert-warning text-center">
                    <i class="bi bi-info-circle"></i> Aucun séminaire prévu pour le moment.
                </div>
            {% else %}
                <div class="list-group shadow-sm">
                    {% for seminaire in seminaires %}
                        <a href="{{ path('seminaire_show', {'id': seminaire.id}) }}"
                           class="list-group-item list-group-item-action mb-3 rounded border border-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="fw-semibold mb-1">{{ seminaire.title }}</h5>
                                <span class="badge bg-light text-dark border">
                                    {{ seminaire.date|date('d M Y, H:i') }}
                                </span>
                            </div>
                            <div class="mt-2 text-muted small">
                                <i class="bi bi-person-circle"></i> {{ seminaire.presenter.firstName }} <br>
                                <i class="bi bi-envelope-at"></i> {{ seminaire.presenter.email }}
                            </div>
                            <div class="text-end mt-2">
                                <small class="text-primary">Voir les détails &rarr;</small>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- 📚 Accès aux archives -->
    <div class="text-center mt-5">
        <h4 class="text-secondary mb-3">📚 Séminaires Passés</h4>
        <p class="text-muted">Consultez les archives et téléchargez les supports des anciens séminaires.</p>
        <a href="{{ path('public_seminaire_past') }}" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-archive-fill me-2"></i> Voir les séminaires passés
        </a>
    </div>
</div>
{% endblock %}
