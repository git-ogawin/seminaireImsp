{# templates/organisateur/seminar/summary.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Soumettre le résumé{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Ajouter le résumé - {{ seminar.title }}</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.summary) }}
                            {{ form_widget(form.summary, {'attr': {'class': 'form-control', 'rows': '6'}}) }}
                            {{ form_errors(form.summary) }}
                        </div>
                        <button type="submit" class="btn btn-success">Soumettre</button>
                        <a href="{{ path('organisateur_manage_seminars') }}" class="btn btn-secondary ms-2">Retour</a>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
