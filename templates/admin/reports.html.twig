{% extends 'base.html.twig' %}

{% block title %}Rapports & Statistiques{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Rapports & Statistiques</h1>
        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>

    <div class="alert alert-secondary">
        Visualisez ici les statistiques et rapports de votre plateforme.
    </div>

    <!-- Exemple de cartes statistiques -->
    <div class="row g-4 mt-3">
        <div class="col-md-4">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <h5 class="card-title">Nombre total de s√©minaires</h5>
                    <p class="card-text display-5">{{ totalSeminars|default('N/A') }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Utilisateurs inscrits</h5>
                    <p class="card-text display-5">{{ totalUsers|default('N/A') }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info h-100">
                <div class="card-body">
                    <h5 class="card-title">Demandes en attente</h5>
                    <p class="card-text display-5">{{ pendingRequests|default('N/A') }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Ajoute ici d'autres statistiques ou graphiques -->

</div>
{% endblock %}
